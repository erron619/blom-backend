{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules"
    ],
    "verbose": true,
    "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*, model:*, route:*, mw:*, middleware:*"
    },
    "watch": [
        "./views",
        "./routes",
        "./middleware",
        "./models",
        "./app.js"
    ],
    "ext": "js,ejs"
}